<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.todo.desktop.ui.controller.SettingsController" 
            style="-fx-background-color: transparent;"
            stylesheets="@styles.css"
            styleClass="scroll-pane">
    <content>
        <VBox spacing="24" alignment="TOP_LEFT">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
            
            <!-- Account Section -->
            <VBox spacing="16" styleClass="card">
                <Label text="Tài khoản" styleClass="title-medium"/>
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <StackPane prefWidth="64" prefHeight="64" styleClass="avatar-circle">
                         <Label fx:id="accountAvatarLabel" text="A" styleClass="avatar-text"/>
                    </StackPane>
                    <VBox spacing="4" alignment="CENTER_LEFT">
                        <Label fx:id="accountNameLabel" text="Tên hiển thị" styleClass="text-body" style="-fx-font-weight: bold;"/>
                        <Label fx:id="accountEmailLabel" text="email@example.com" styleClass="text-secondary"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Chỉnh sửa" styleClass="button-secondary"/>
                </HBox>
            </VBox>

            <!-- Notifications -->
            <VBox spacing="16" styleClass="card">
                <Label text="Thông báo" styleClass="title-medium"/>
                <VBox spacing="12">
                    <CheckBox fx:id="desktopNotificationToggle" text="Bật thông báo trên desktop" styleClass="filter-chip"/>
                    <CheckBox text="Gửi email nhắc việc" styleClass="filter-chip"/>
                </VBox>
            </VBox>

            <!-- Appearance -->
            <VBox spacing="16" styleClass="card">
                <Label text="Giao diện" styleClass="title-medium"/>
                <VBox spacing="8">
                    <CheckBox fx:id="darkModeToggle" text="Chế độ tối (Đang phát triển)" disable="true" styleClass="filter-chip"/>
                    <Label text="Hiện tại ứng dụng đang sử dụng giao diện Light Theme mặc định." styleClass="text-caption"/>
                </VBox>
            </VBox>

            <!-- Integration -->
            <VBox spacing="16" styleClass="card">
                <Label text="Tích hợp Outlook" styleClass="title-medium"/>
                <VBox spacing="12">
                    <Label text="Kết nối tài khoản Outlook của bạn để đồng bộ email và gửi thư từ ứng dụng." wrapText="true" styleClass="text-body"/>
                    <VBox spacing="4">
                        <Label fx:id="outlookStatusLabel" text="Chưa kết nối" styleClass="text-secondary" style="-fx-font-style: italic;"/>
                        <Label fx:id="outlookMessageLabel" text="" wrapText="true" styleClass="text-caption"/>
                    </VBox>
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Button fx:id="connectOutlookButton" text="Kết nối Outlook" onAction="#onConnectOutlook" styleClass="button-primary"/>
                        <Button fx:id="disconnectOutlookButton" text="Ngắt kết nối" onAction="#onDisconnectOutlook" visible="false" managed="false" styleClass="button-secondary"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
