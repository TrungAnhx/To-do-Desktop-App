<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.todo.desktop.ui.controller.EmailDetailController"
            style="-fx-background-color: transparent;"
            stylesheets="@styles.css">
    
