                        </StackPane>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label fx:id="senderNameLabel" text="Sender Name" 
                                   style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: white;"/>
